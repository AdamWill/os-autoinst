#!/bin/bash

iso=$1
if test -z "$iso" ; then
	echo "usage: $0 ISO"
	exit 1
fi
isodir=`pwd`
scriptdir=$(dirname $(dirname $0))
# make absolute path
export SUSEISO=`$scriptdir/tools/absolutize $iso`
export PERLLIB=$scriptdir

. env.sh
echo testing $SUSEISO
# cleanup
test -e qemu.pid && kill `cat qemu.pid` 2>/dev/null && rm -f qemu.pid
rm -f qemuscreenshot/*.ppm
date > currentautoinst-log.txt
curl -s $SUSEMIRROR/repo/oss/media.1/build >> currentautoinst-log.txt
$scriptdir/start.pl

name=$(perl -e '$_=shift;s{.*/}{};s/-Media.iso//;print' $SUSEISO)
mkdir -p video
echo $scriptdir/tools/ppmtompg qemuscreenshot video/$name
$scriptdir/tools/ppmtompg qemuscreenshot video/$name
test -e qemu.pid && kill `cat qemu.pid` 2>/dev/null && rm -f qemu.pid
$scriptdir/tools/checklog currentautoinst-log.txt | tee -a currentautoinst-log.txt
# return success if video was created:
test -e video/$name.ogv
